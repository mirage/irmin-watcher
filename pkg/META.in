  archive(byte) = "irmin-watcher-inotify.cma"
  archive(native) = "irmin-watcher-inotify.cmxa"
  plugin(byte) = "irmin-watcher-inotify.cma"
  plugin(native) = "irmin-watcher-inotify.cmxs"
